<div class="container">
  <h1 class="my-5"><%= @list.name %></h1>
  <p>Movies belonging to this list</p>

  <% @list.bookmarks.each do |bookmark| %>
    <div class="card">
      <p><%= bookmark.movie.title %></p>
      <p><%= bookmark.movie.overview %></p>
      <p><%= bookmark.comment %></p>
      <%= link_to("Delete", list_path(bookmark), class: "btn btn-warning") %>
    </div>
  <% end %>

  <%= link_to("Add bookmark", new_list_bookmark_path(@list), class: "btn btn-info") %>
</div>
